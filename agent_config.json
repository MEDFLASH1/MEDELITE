  "communication_protocol": {
    "event_name": "agent-communication",
    "required_fields": ["from", "to", "action", "timestamp"],
    "message_types": [
      "data-updated",
      "ui-changed",
      "navigation-changed",
      "validation-required",
      "error-occurred",
      "task-completed"
    ]
  },
  
  "naming_conventions": {
    "functions": {
      "pattern": "[agent][Function][Action]",
      "examples": [
        "agent2AppInitialize",
        "agent3DataLoad",
        "agent4NavNavigate",
        "agent5UtilsValidate"
      ]
    },
    "variables": {
      "global_pattern": "AGENT[N]_[FUNCTION]_[DESCRIPTION]",
      "local_pattern": "[agent][function][Description]",
      "examples": [
        "AGENT2_APP_CONFIG",
        "agent3DataCache",
        "AGENT4_NAV_STATE"
      ]
    },
    "classes": {
      "pattern": "Agent[N][Function]Service",
      "examples": [
        "Agent2AppService",
        "Agent3DataService",
        "Agent4NavigationService"
      ]
    }
  },
  
  "validation_rules": {
    "pre_commit": [
      "verify_no_duplicates",
      "verify_syntax",
      "verify_naming_conventions",
      "verify_permissions",
      "verify_dependencies"
    ],
    "post_commit": [
      "update_file_mapping",
      "notify_other_agents",
      "generate_quality_report"
    ]
  },
  
  "error_prevention": {
    "duplicate_detection": {
      "enabled": true,
      "threshold": 0.3,
      "auto_block": true
    },
    "syntax_validation": {
      "enabled": true,
      "tools": ["eslint", "html-validate", "stylelint"],
      "auto_fix": false
    },
    "permission_check": {
      "enabled": true,
      "strict_mode": true,
      "auto_block": true
    }
  }
