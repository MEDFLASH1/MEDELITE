{
  "name": "flashcards-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node build-script.js",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings=150",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings=0",
    "format": "prettier --write \"**/*.{js,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,json,md}\"",
    "test": "vitest run",
    "test:unit": "vitest run src/**/*.test.js",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "start-server-and-test preview http://localhost:4173 cypress:run",
    "cypress:run": "cypress run --browser chrome",
    "cypress:open": "cypress open",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "quality:check": "npm run lint:check && npm run format:check && npm run test",
    "quality:fix": "npm run lint:fix && npm run format",
    "ci:test": "npm run lint && npm run test && npm run build",
    "ci:quality": "npm run quality:check",
    "ci:security": "npm run security:audit",
    "ci:all": "npm run ci:quality && npm run ci:security && npm run ci:test",
    "deploy:prepare": "npm run quality:check && npm run build",
    "deploy:verify": "npm run build && npm run test",
    "health:check": "node -e \"console.log('Health check passed')\"",
    "version:bump": "npm version patch",
    "clean": "rm -rf dist build node_modules/.cache",
    "clean:install": "npm run clean && npm ci"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/dom": "^10.4.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^5.1.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.2",
    "start-server-and-test": "^2.0.12",
    "terser": "^5.43.1",
    "typescript": "^5.5.0",
    "vite": "^7.0.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
