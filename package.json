{
  "name": "flashcard-app",
  "version": "1.0.0",
  "description": "Advanced Flashcard Application with Spaced Repetition",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "build": "node build-script.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate:conflicts": "node scripts/merge-conflict-detector.cjs",
    "fix:conflicts": "node scripts/merge-conflict-detector.cjs --fix",
    "validate:naming": "node scripts/naming-validator.cjs",
    "validate:build": "node scripts/build-validator.cjs",
    "validate:all": "npm run validate:naming && npm run validate:build && npm run lint",
    "validate:all-safety": "npm run validate:conflicts && npm run validate:all",
    "integrity:check": "npm run validate:all-safety && echo \"âœ… Integrity check passed\"",
    "agent:start": "node scripts/auto-workflow.cjs start",
    "agent:finish": "node scripts/auto-workflow.cjs finish",
    "agent:status": "node scripts/auto-workflow.cjs status",
    "agent:coordinate": "node scripts/agent-coordination.cjs",
    "agent:cleanup": "node scripts/agent-coordination.cjs cleanup"
  },
  "keywords": [
    "flashcards",
    "spaced-repetition",
    "learning",
    "education",
    "pwa"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  }
}

