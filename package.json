{
  "name": "flashcards-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js --max-warnings=10",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"*.{js,css,json,md}\"",
    "format:check": "prettier --check \"*.{js,css,json,md}\"",
    "test": "echo \"Tests not configured yet\" && exit 0",
    "test:unit": "echo \"Unit tests not configured yet\" && exit 0",
    "test:integration": "echo \"Integration tests not configured yet\" && exit 0",
    "security:audit": "npm audit --audit-level=moderate",
    "quality:check": "npm run lint && npm run format:check",
    "deploy:prepare": "npm run quality:check && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.2",
    "typescript": "^5.5.0",
    "vite": "^5.2.1"
  }
}
